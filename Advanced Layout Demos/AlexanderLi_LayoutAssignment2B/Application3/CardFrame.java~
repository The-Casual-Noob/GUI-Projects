package application3;

import javax.swing.*;
import java.awt.event.*;
import java.awt.BorderLayout;
import java.awt.CardLayout;
import java.awt.FlowLayout;
/**
 * This class creates the menu bar and instantiates JPanels that display the four layouts.
 * This Window uses CardLayout with 6 cards.
 * Card 1 contains an instance of GroupLayoutTest
 * Card 2 contains an instance of FlowLayoutTest
 * Card 3 contains an instance of FlowLayoutTest within GroupLayoutTest
 * Card 4 contains an instance of GridBagLayoutTest
 * Card 5 contains an instance of SpringLayoutTest
 * Card 6 contains an instance of each layout test class arranged in a BorderLayout
 * @author dli20
 *
 */
public class CardFrame extends JFrame implements ActionListener{
	/**
	 * The class constructor creates a window 1200x600 pixels in size.
	 * It creates the File menu and menu bar for the CardFrame instance.
	 * It calls the reset() method to create the cards.
	 */
	public CardFrame(){
		super("Layouts Demonstration");
		this.setDefaultCloseOperation(JFrame.DISPOSE_ON_CLOSE);
		this.setSize(1200, 600);
		//this.setLayout();
		
		JMenuBar myMenus = new JMenuBar();
		JMenu fileMenu = new JMenu("File");
		JMenuItem quitItem = new JMenuItem("Quit");
		quitItem.addActionListener(this);
		fileMenu.add(quitItem);
		myMenus.add(fileMenu);
		this.setJMenuBar(myMenus);
		
		this.reset();
		
	}
	
	/**
	 * The reset() method constructs the cards and the tab menu
	 */
	public void reset(){
		JTabbedPane tabMenu = new JTabbedPane();
		//JPanel cards = new JPanel(new CardLayout());
		JPanel card1 = new GroupLayoutTest();
		JPanel card2 = new FlowLayoutTest();
		FlowLayoutTest card3 = new FlowLayoutTest();
		JPanel card4 = new GridBagLayoutTest();
		JPanel card5 = new SpringLayoutTest();
		JPanel card6 = new JPanel(new BorderLayout());
		JLabel authorInfo = new JLabel();
		authorInfo.setHorizontalAlignment(JLabel.CENTER);
		authorInfo.setText("<html><body width=300><p>SpringLayout: demo by Jake Mayer"
				+ "<br/>GridbagLayout: demo by Jake Mayer"
				+ "<br/>GroupLayout: demo by Alexander Li"
				+ "<br/>FlowLayout: demo by Alexander Li</p></body></html>");
		card3.getDisplayPanel().add(new GroupLayoutTest());	//Add GroupLayout inside of FlowLayout in card 3
		//Add the four layouts and the author info label to card 6
		card6.add(new SpringLayoutTest(), BorderLayout.NORTH);
		card6.add(authorInfo, BorderLayout.CENTER);
		card6.add(new GridBagLayoutTest(), BorderLayout.WEST);
		card6.add(new GroupLayoutTest(), BorderLayout.EAST);
		card6.add(new FlowLayoutTest(), BorderLayout.SOUTH);
		
		tabMenu.add("Card 1", card1);
		tabMenu.add("Card 2", card2);
		tabMenu.add("Card 3", card3);
		tabMenu.add("Card 4", card4);
		tabMenu.add("Card 5", card5);
		tabMenu.add("Card 6", card6);
		
		//this.add(cards);
		this.add(tabMenu);
		
		this.setVisible(true);
	}
	
	/**
	 * Main method creates an instance of CardFrame
	 * @param Args
	 */
	public static void main(String[]Args){
		new CardFrame();
	}
	
	/**
	 * actionPerformed determines command of actionEvent and executes the appropriate action
	 * ActionEvents are generated by the File menu
	 */
	public void actionPerformed(ActionEvent ae){
		if (ae.getActionCommand().equals("Quit")){
			this.dispose();
		}
	}
}
